            <Cursor fx:constant="HAND" />
         </cursor>
         <padding>
            <Insets right="1.0" />
         </padding>
         <graphic>
            <ImageView fx:id="btnSearchIcon" fitHeight="32.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/search.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </graphic>
      </Button>
    </children>
</AnchorPane>
